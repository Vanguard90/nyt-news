{
  "compilerOptions": {
    "compileOnSave": false,
    "outDir": "./build",
    "allowJs": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost"
    ],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/scripts/*"
  ]
}
